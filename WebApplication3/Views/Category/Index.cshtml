@using WebApplication3.ViewModels;
@model BazaVM



<style>
	#Categories img {
		transition: transform .2s;
		margin: 5px;
	}

		#Categories img:hover {
			transform: scale(1.4);
		}

</style>


<div id="Categories" class="container" style="padding-top:70px; padding-bottom:70px">
	<div class="row gx-5 gy-5">
		@foreach (var item in Model.Categories)
		{
			<div class="col-3 ">
				<div class="text-align-center w-100">
					<a href="https://localhost:7081/Home/index" style="text-decoration:none; color:black">
					<img src="@item.Image" class="card-img-top">
					<h5 class="card-title text-center " style="margin:0 auto;background-color:black;color:white; border-radius:10px; width:300px; height:50px; padding:10px 10px">@item.Name</h5>
					</a>
				</div>
			</div>

		}
	</div>
</div>
